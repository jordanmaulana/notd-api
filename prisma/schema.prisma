generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Note {
  id        String  @id @default(cuid())
  content   String
  isPrivate Boolean @default(true)
  tags      Tag[]
  userId    String
  user      User    @relation(fields: [userId], references: [id])
}

model Tag {
  id     String @id @default(cuid())
  name   String
  noteId String
  note   Note   @relation(fields: [noteId], references: [id])
  userId String
  user   User   @relation(fields: [userId], references: [id])
}

model User {
  id       String    @id @default(cuid())
  email    String    @unique
  password String
  sessions Session[]
  notes    Note[]
  tags     Tag[]
}

model Session {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])
}
